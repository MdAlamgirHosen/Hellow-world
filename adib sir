	<?php		
		
if ( function_exists( 'ot_get_option' ) ) {
$count = 0;
    $images = explode( ',', get_post_meta( get_the_ID(), 'ltr_gallery', true ) );
   if ( !empty( $images ) ) {
  foreach( $images as $id ) {
  $count++;
    if ( !empty( $id ) ) {
   $full_img_src = wp_get_attachment_image_src( $id, 'thumb-full' );
            $thumb_img_src = wp_get_attachment_image_src( $id,'thumb-larged' );
   echo '<div class="item';if($count == 1){echo ' active';} echo'"><div class="single_slide_item"><img data-thumb="'. $thumb_img_src[0].'" src="'.$thumb_img_src[0].'"/></div></div>
   ';
    }
  }
   }
 }
?>



